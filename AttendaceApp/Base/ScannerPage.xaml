<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Base.ScannerPage"
             Title="ScannerPage">
    <StackLayout
        Orientation="Vertical"
        Padding="30,0"
        Spacing="25">
        <Image
            Source="northeast_logo.png"
            HeightRequest="185"
            Aspect="AspectFit"/>

        <Label
            Text="Scanner Page"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Label 
            Text="Scan Barcode to Register Attendance"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Image
            Source="camera_placeholder.png"
            HeightRequest="185"
            Aspect="AspectFit"/>

        <Button
            Text="Back" Clicked="btnBack_Clicked"/>
        
    </StackLayout>
</ContentPage>